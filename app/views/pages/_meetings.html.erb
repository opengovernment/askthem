<div id="page">
  <% if @meetings.length > 0 %>
    <table class="meetings">
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Agenda</th>
          <th>Minutes</th>
        </tr>
      </thead>
      <tbody>
        <%= render @meetings %>
      </tbody>
    </table>

    <%= paginate @meetings, outer_window: 1, params: {format: nil}, replace: '#page', scroll: '.nav_extras' %>
  <% else %>
    <p>No meetings found</p>
  <% end %>
</div>
